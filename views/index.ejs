<% include layout.ejs %>

<h2>Escrows</h2>
<table>
  <thead>
    <tr><th>Order ID</th><th>Seller</th><th>Amount</th><th>Status</th><th>Created</th><th>Action</th></tr>
  </thead>
  <tbody>
    <% escrows.forEach(function(e){ %>
      <tr>
        <td><%= e.order_id %></td>
        <td><%= e.seller_id %></td>
        <td><%= (e.amount/100).toFixed(2) %> <%= e.currency %></td>
        <td><%= e.status %></td>
        <td><%= new Date(e.created_at).toLocaleString() %></td>
        <td><a href="/admin/escrow/<%= e.id %>">View</a></td>
      </tr>
    <% }) %>
  </tbody>
</table>
